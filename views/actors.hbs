{{#extends 'base'}}

{{#block 'content'}}
    <table class="table">
        <thead>
            <tr>
                <th>Actor ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Last Update</th>
                <th></th>
            </tr>
        </thead>
        {{#each actors}}
        <tr>
            <td>{{this.actor_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.last_update}}</td>
            <td>
                <a href="/actors/{{this.actor_id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/actors/{{this.actor_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
    {{/block}}

{{/extends}}