{{#extends 'base'}}
{{#block 'content'}}
<form method="POST">
    <h1>Edit Actor</h1>

    <div>
    <label>
        First Name
    </label> 
    <input type="text" name="first_name" class="form-control" value={{actor.first_name}} />       
    </div>

    <div>
    <label>
        Last Name
    </label> 
    <input type="text" name="last_name" class="form-control" value={{actor.last_name}} />       
    </div>

    <button class="btn btn-primary">Submit</button>

</form>
{{/block}}
{{/extends}}