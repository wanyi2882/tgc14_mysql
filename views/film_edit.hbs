
   
{{#extends 'base'}}

{{#block 'content'}}
<form method="POST">
    <div>
        <label>Title</label>
        <input type="text" name="title" class="form-control" value="{{film.title}}"/>
    </div>
    <div>
        <label>Description</label>
        <textarea class="form-control" name="description">{{film.description}}</textarea>
    </div>

    <div>
        <label>Actors:</label>
        <select id="actors" name="actors" class="form-control" multiple>
            {{#each actors}}
                <option value="{{this.actor_id}}" 
                {{#inArray ../currentActorIds this.actor_id}}
                selected
                {{/inArray}}
                >{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>
    </div>

    <div>
        <label>Language</label>
        <select name="language_id" class="form-control">
            {{#each languages}}
            <option value="{{this.language_id}}"
                {{#eq this.language_id ../film.language_id}}
                    selected
                {{/eq}}
                >{{this.name}}
            </option>
            {{/each}}
        </select>
    </div>
    <div>
        <label>Rental Duration</label>
        <input type="text" name="rental_duration" class="form-control" value="{{film.rental_duration}}"/>
    </div>
    <div>
        <label>Rental Rate</label>
        <input type="text" name="rental_rate" class="form-control" value="{{film.rental_rate}}"/>
    </div>
    <div>
        <label>Replacement Cost</label>
        <input type="text" name="replacement_cost" class="form-control" value="{{film.replacement_cost}}"/>
    </div>

    <input type="submit" value="Update" class="btn btn-primary my-3"/>
</form>
{{/block}}

{{#block js}}
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  <script>
      $(function(){
            $("#actors").select2();
      });
    
  </script>
{{/block}}

{{/extends}}